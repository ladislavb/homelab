resource "proxmox_vm_qemu" "sisko" {
  name        = "sisko.blazcata.cz"
  desc        = "Test VM"
  target_node = var.PROXMOX_NODE1
  pool        = "Test"

  clone   = "Ubuntu2204LTS"
  os_type = "cloud-init"
  scsihw  = "virtio-scsi-single" # virtio-scsi-pci for multiple disks
  qemu_os = "l26"
  ciuser  = "homelab"
  sshkeys = "ssh-rsa  ladislav@lblazek.cz"

  cores     = 2
  sockets   = 1
  memory    = 2048
  ipconfig0 = "ip=10.10.30.14/24,gw=10.10.30.1"

  disk {
    type    = "scsi"
    storage = "local-lvm"
    ssd     = 1
    size    = "32G"
  }

  network {
    model  = "virtio"
    bridge = "vmbr0"
    tag    = 30
  }
}

resource "routeros_ip_dns_record" "sisko" {
  name    = "sisko.blazcata.cz"
  address = "10.10.30.14"
  type    = "A"
  ttl     = "1h"
  comment = "TF"
}
